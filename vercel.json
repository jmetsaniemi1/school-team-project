{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "pages/**",
            "use": "@vercel/static"
        },
        {
            "src": "resources/**",
            "use": "@vercel/static"
        },
        {
            "src": "global/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/api/(.*)",
            "dest": "/index.js"
        },
        {
            "src": "/pages/(.*)",
            "dest": "/pages/$1"
        },
        {
            "src": "/resources/(.*)",
            "dest": "/resources/$1"
        },
        {
            "src": "/global/(.*)",
            "dest": "/global/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.js"
        }
    ]
} 